extends layout

block content
  header.header
    h1.header__title= title
    p.header__description= description

  section.container
    a.container__link(href='https://twitter.com/ozr_otenki', target='_blank')
      - if (ua === 'iOS' || ua === 'Android' || ua === 'iPad')
        .container__gif(style='background-image:url("/images/video_02.gif");')
      - else
        video.container__video#video(autoplay, loop, audio='muted')
          source(src='/movies/video.mp4', type="video/mp4")

      canvas.container__canvas#canvas(width='2560', height='1440')

      script.
        var weather = JSON.parse(unescape("!{escape(JSON.stringify(weather))}"));
      script(src='/javascripts/canvas.js')