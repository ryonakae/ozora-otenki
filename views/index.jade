extends layout

block content
  header.header
    h1.header__title= title
    p.header__description= description

  canvas#canvas(width='800', height='500', style='border:1px solid #666;')

  video#video(autoplay, loop, style='display:none;')
    source(src='/movies/sample.webm', type="video/webm")
    source(src='/movies/sample.ogg', type="video/ogg")
    source(src='/movies/sample.mp4', type="video/mp4")