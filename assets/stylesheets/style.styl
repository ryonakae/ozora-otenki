@import 'nib'
@import '../components/normalize.styl/normalize.styl'


*
  box-sizing border-box

body
  font-family "Avenir Next", Avenir, "Helvetica Neue", Helvetica, Arial, "游ゴシック", YuGothic, "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", "メイリオ", Meiryo, sans-serif
  background-color rgb(242, 242, 242)
  // background-color #fff
  color #fff


.header
  display none


.container
  transition-duration 600ms
  transition-timing-function ease
  transition-property all
  opacity 0
  // visibility hidden
  position absolute
  // width 100vw
  // height 56.25vw
  // top 50vh
  // transform translateY(-50%)
  // width 100%
  // height 56.25%
  top 50%
  transform translateY(-50%)
  overflow hidden

.container--shown
  opacity 1
  // visibility visible


.container__video
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  opacity 0.6


.container__canvas
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  // opacity 0.9


.container__gif
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  opacity 0.6
  background-size cover
  // background-image url('/images/video.gif')
  background-repeat no-repeat
  background-position 50% 50%


.container__link
  display block
  width 100%
  height 100%
  transition-duration 350ms
  transition-timing-function ease
  transition-property all

  &:hover
    opacity 0.7